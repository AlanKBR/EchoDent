{
  "name": "Agenda Responsive and Scroll",
  "description": "Validate no global page scroll and behavior across breakpoints.",
  "steps": [
    { "type": "setViewport", "width": 1400, "height": 900 },
    { "type": "navigate", "url": "${baseUrl}/agenda" },
    { "type": "waitForText", "text": "Configurações" },
    { "type": "assertNoBodyScroll" },

    { "type": "setViewport", "width": 1024, "height": 768 },
    { "type": "delay", "ms": 200 },
    { "type": "assertNoBodyScroll" },

    { "type": "setViewport", "width": 768, "height": 700 },
    { "type": "delay", "ms": 200 },
    { "type": "assertNoBodyScroll" }
  ]
}
